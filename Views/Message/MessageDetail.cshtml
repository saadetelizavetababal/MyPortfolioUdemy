@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="MessageId" />

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Messages</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Message Details</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<b>From:</b> @Model.NameSurname
							<br />
							<b>Email:</b> @Model.Email
							<br />
							<b>Date:</b> @Model.SendDate
							<br /><br />
							<b>Message:</b> @Model.MessageDetail
						</div>
						@* <table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">From</th>
									<th scope="col">Subject</th>
									<th scope="col">Date</th>
									<th scope="col">See the Message</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.MessageId</td>
										<td>@item.NameSurname</td>
										<td>@item.Subject</td>
										<td>@item.SendDate.ToShortDateString()</td>
										<td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-warning">See the Message</a></td>
										@if (item.IsRead == true)
										{
											<td><a href="/Message/ChangeIsReadToFalse/@item.MessageId" class="btn btn-dark">Mark as unread</a></td>
										}
										else
										{
											<td><a href="/Message/ChangeIsReadToTrue/@item.MessageId" class="btn btn-info">Mark as read</a></td>
										}
										<td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-danger">Delete</a></td>
									</tr>
								}

							</tbody>
						</table> *@
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

